 	case XDP_ABORTED:
+#ifdef HAVE_TRACE_XDP_EXCEPTION
 		trace_xdp_exception(rq->netdev, prog, act);
+#endif
 	case XDP_DROP:
 		rq->stats.xdp_drop++;
