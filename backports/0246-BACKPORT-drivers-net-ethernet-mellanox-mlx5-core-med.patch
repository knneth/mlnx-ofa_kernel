+				  enum devlink_reload_limit limit,
+				  u32 *actions_performed,
+#endif
 				  struct netlink_ext_ack *extack)
 {
 	struct mlx5_core_dev *dev = devlink_priv(devlink);
 
 	return mlx5_load_one(dev, false);
 }
