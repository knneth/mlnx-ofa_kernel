+#endif
 };
 
 static struct mlx5_vf_migration_file *
@@ -1387,10 +1394,14 @@ static const struct vfio_device_ops mlx5
 	.mmap = vfio_pci_core_mmap,
 	.request = vfio_pci_core_request,
