+	mlxdevm = &mlx5_devm_device_get(esw->dev)->device;
+#endif
+
+#ifdef HAVE_DEVL_TRAP_GROUPS_REGISTER
 	devl_assert_locked(priv_to_devlink(esw->dev));
+#endif
 
 	toggle_lag = !mlx5_sriov_is_enabled(esw->dev) && !is_mdev_switchdev_mode(esw->dev);
 
 	if (toggle_lag)
 		mlx5_lag_disable_change(esw->dev);
 
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+#ifdef HAVE_DEVL_PORT_REGISTER
+	devlink = priv_to_devlink(esw->dev);
+	devl_lock(devlink);
+#endif
+	devm_lock(mlxdevm);
