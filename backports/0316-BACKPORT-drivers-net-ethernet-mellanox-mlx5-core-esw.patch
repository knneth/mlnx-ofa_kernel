 /* When disabling sriov, free driver level resources. */
 void mlx5_eswitch_disable_sriov(struct mlx5_eswitch *esw, bool clear_vf)
 {
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	struct mlxdevm *mlxdevm;
+#ifdef HAVE_DEVL_PORT_REGISTER
+	struct devlink *devlink;
+#endif
+#endif
 	if (!mlx5_esw_allowed(esw))
 		return;
 
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	mlxdevm = &mlx5_devm_device_get(esw->dev)->device;
+#endif
+
+#ifdef HAVE_DEVL_TRAP_GROUPS_REGISTER
 	devl_assert_locked(priv_to_devlink(esw->dev));
+#else
+#ifdef HAVE_DEVL_PORT_REGISTER
+	devlink = priv_to_devlink(esw->dev);
+	devl_lock(devlink);
+#endif
+	devm_lock(mlxdevm);
+#endif
 	/* If driver is unloaded, this function is called twice by remove_one()
 	 * and mlx5_unload(). Prevent the second call.
 	 */
 	if (!esw->esw_funcs.num_vfs && !esw->esw_funcs.num_ec_vfs && !clear_vf)
-		return;
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	goto unlock;
+#else
+	return;
+#endif
 
 	esw_info(esw->dev, "Unload vfs: mode(%s), nvfs(%d), necvfs(%d), active vports(%d)\n",
 		 esw->mode == MLX5_ESWITCH_LEGACY ? "LEGACY" : "OFFLOADS",
@@ -1839,9 +1895,17 @@ void mlx5_eswitch_disable_sriov(struct m
 	}
 
 	if (esw->mode == MLX5_ESWITCH_OFFLOADS) {
+#ifdef HAVE_DEVLINK_HAS_RATE_FUNCTIONS
 		struct devlink *devlink = priv_to_devlink(esw->dev);
+#endif
 
+#ifdef HAVE_DEVLINK_HAS_RATE_FUNCTIONS
+#ifdef HAVE_DEVL_PORT_REGISTER
 		devl_rate_nodes_destroy(devlink);
+#else
+ 		devlink_rate_nodes_destroy(devlink);
+#endif
+#endif
 	}
 	/* Destroy legacy fdb when disabling sriov in legacy mode. */
 	if (esw->mode == MLX5_ESWITCH_LEGACY)
@@ -1851,6 +1915,13 @@ void mlx5_eswitch_disable_sriov(struct m
 		esw->esw_funcs.num_vfs = 0;
 	else
 		esw->esw_funcs.num_ec_vfs = 0;
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+unlock:
+	devm_unlock(mlxdevm);
+#ifdef HAVE_DEVL_PORT_REGISTER
+	devl_unlock(devlink);
+#endif
+#endif
 }
 
 /* Free resources for corresponding eswitch mode. It is called by devlink
@@ -1858,7 +1929,9 @@ void mlx5_eswitch_disable_sriov(struct m
  */
 void mlx5_eswitch_disable_locked(struct mlx5_eswitch *esw)
 {
+#ifdef HAVE_DEVLINK_HAS_RATE_FUNCTIONS
 	struct devlink *devlink = priv_to_devlink(esw->dev);
+#endif
 
 	/* Notify eswitch users that it is exiting from current mode.
 	 * So that it can do necessary cleanup before the eswitch is disabled.
@@ -1886,19 +1959,51 @@ void mlx5_eswitch_disable_locked(struct
 		mlx5_devm_rate_nodes_destroy(esw->dev);
 #endif
 
+#ifdef HAVE_DEVLINK_HAS_RATE_FUNCTIONS
 	if (esw->mode == MLX5_ESWITCH_OFFLOADS)
+#ifdef HAVE_DEVL_PORT_REGISTER
 		devl_rate_nodes_destroy(devlink);
+#else
+		devlink_rate_nodes_destroy(devlink);
+#endif
+#endif
 }
 
 void mlx5_eswitch_disable(struct mlx5_eswitch *esw)
 {
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	struct mlxdevm *mlxdevm;
+#ifdef HAVE_DEVL_PORT_REGISTER
+	struct devlink *devlink;
+#endif
+#endif
+
 	if (!mlx5_esw_allowed(esw))
 		return;
 
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	mlxdevm = &mlx5_devm_device_get(esw->dev)->device;
+#endif
+
+#ifdef HAVE_DEVL_TRAP_GROUPS_REGISTER
 	devl_assert_locked(priv_to_devlink(esw->dev));
+#endif
 	mlx5_lag_disable_change(esw->dev);
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+#ifdef HAVE_DEVL_PORT_REGISTER
+	devlink = priv_to_devlink(esw->dev);
+	devl_lock(devlink);
+#endif
+	devm_lock(mlxdevm);
+#endif
 	mlx5_eswitch_disable_locked(esw);
 	esw->mode = MLX5_ESWITCH_LEGACY;
+#ifndef HAVE_DEVL_TRAP_GROUPS_REGISTER
+	devm_unlock(mlxdevm);
+#ifdef HAVE_DEVL_PORT_REGISTER
+	devl_unlock(devlink);
+#endif
+#endif
 	mlx5_lag_enable_change(esw->dev);
 }
 
